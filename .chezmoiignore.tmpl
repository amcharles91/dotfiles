# Shell-specific exclusions based on availability
{{- if not (lookPath "fish") }}
dot_config/fish/
{{- end }}
{{- if not (lookPath "nu") }}
dot_config/nushell/
{{- end }}

# If shells aren't installed, don't manage their configs
{{- if not (lookPath "zsh") }}
dot_zshrc.tmpl
{{- end }}

